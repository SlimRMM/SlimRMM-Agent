<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for notarization - hardened runtime -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <!-- Allow loading unsigned dynamic libraries (for CGO) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Network client access -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Network server access (for remote desktop streaming) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Note: Screen Recording and Accessibility permissions cannot be pre-granted
         via entitlements. They must be granted by the user in System Settings.
         However, signing the app with a consistent identity ensures permissions
         persist across updates. -->
</dict>
</plist>
